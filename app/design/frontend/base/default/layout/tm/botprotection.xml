<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">

    <default>
        <reference name="head">
            <action method="addItem" ifconfig="tm_botprotection/general/enabled">
                <type>skin_css</type>
                <name>css/tm/botprotection.css</name>
            </action>
            <action method="addItem" ifconfig="tm_botprotection/general/enabled">
                <type>skin_js</type>
                <name>js/tm/botprotection.js</name>
                <params>defer</params>
            </action>
            <action method="addJs" ifconfig="tm_botprotection/general/enabled">
                <script>mage/captcha.js</script>
            </action>
        </reference>
    </default>
</layout>
