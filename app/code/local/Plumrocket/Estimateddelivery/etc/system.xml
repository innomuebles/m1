<?xml version="1.0"?>
<config>
	<tabs>
        <plumrocket>
            <label>
            	<![CDATA[<div style="padding-left:22px; background: url(data:image/png;base64,) left 50% no-repeat;">Plumrocket Inc.</div>]]> 
            </label>
            <sort_order>101</sort_order>
        </plumrocket>
    </tabs>
    
	<sections>
		<estimateddelivery translate="label">                    
			<label>Estimated Delivery Date</label>
			<tab>plumrocket</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1800</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>            
			<groups>
				<general translate="label"> 
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<version translate="label">
		                    <frontend_type>text</frontend_type>
		                    <frontend_model>estimateddelivery/system_config_version</frontend_model>
		                    <sort_order>10</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </version>
						<enable translate="label">
							<label>Enable Extension</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable>
						<serial translate="label">
                            <label>Serial Key</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>plumbase/system_config_form_field</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[
                                Your can find <strong>Serial Key</strong> in your account at <a target="_blank" href="https://store.plumrocket.com/downloadable/customer/products/">store.plumrocket.com</a>. For manual <a target="_blank" href="http://wiki.plumrocket.com/wiki/License_Installation">click here</a>.
                            ]]></comment>
                        </serial>
						<position translate="label">
							<label>Display On</label>
							<frontend_type>multiselect</frontend_type>
                            <source_model>estimateddelivery/values_position</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[To display dates on Magento Order Confirmation Page - <a href="https://store.plumrocket.com/magento-extensions/checkout-success-page-magento-extension.html" target="_blank">Plumrocket Checkout Success Page Extension</a> must be installed]]></comment>
						</position>
					</fields>
				</general>
				
				<delivery translate="label"> 
					<label>Delivery</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<default_days translate="label">
							<label>Default business days to delivery</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>estimateddelivery/system_config_days</frontend_model>
							<comment><![CDATA[Number of business days (excluding weekends and holidays) from boutique closing date. Will be used if no specific delivery date nor estimated delivery text provided.]]></comment>
						</default_days>
						<default_text_enable translate="label">
							<label>Display Default Estimated Delivery Text</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>If enabled, the default text will be displayed for all products without estimated delivery information specified</comment>
						</default_text_enable>
						<default_text translate="label">
							<label>Default estimated delivery text</label>
							<frontend_type>editor</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>estimateddelivery/system_config_editor</frontend_model>
							<comment>Will be displayed if neither estimated delivery date nor estimated delivery text for products/categories is provided</comment>
							<depends>
								<default_text_enable>1</default_text_enable>
							</depends>
						</default_text>
						<time_after_enable translate="label">
							<label>Enable Cut-Off Time</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>21</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</time_after_enable>
						<time_after translate="label">
							<label>Delivery Cut-Off Time</label>
							<frontend_type>time</frontend_type>
							<frontend_model>estimateddelivery/system_config_time</frontend_model>
							<sort_order>22</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Exclude order creation date from calculations if order is placed after specified time</comment>
							<depends>
								<time_after_enable>1</time_after_enable>
							</depends>
						</time_after>
						<holidays translate="label">
							<label>Holidays</label>
							<frontend_type>text</frontend_type>
							<frontend_model>estimateddelivery/system_config_datePeriod</frontend_model>
                            <backend_model>estimateddelivery/backend_datePeriod</backend_model>
							<sort_order>24</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</holidays>
						<weekend translate="label">
                            <label>Weekend Days</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_locale_weekdays</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                            <comment>Selected days of the week will be excluded from the dynamically generated delivery dates</comment>
                        </weekend>
					</fields>
				</delivery>
				
				<shipping translate="label"> 
					<label>Shipping</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<default_days translate="label">
							<label>Default business days to shipping</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>estimateddelivery/system_config_days</frontend_model>
							<comment><![CDATA[Number of business days (excluding weekends and holidays) from boutique closing date. Will be used if no specific delivery date nor estimated delivery text provided.]]></comment>
						</default_days>
						<default_text_enable translate="label">
							<label>Display Default Estimated Shipping Text</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>If enabled, the default text will be displayed for all products without estimated shipping information specified</comment>
						</default_text_enable>
						<default_text translate="label">
							<label>Default estimated shipping text</label>
							<frontend_type>editor</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_model>estimateddelivery/system_config_editor</frontend_model>
							<comment>Will be displayed if neither estimated shipping date nor estimated shipping text for products/categories is provided</comment>
							<depends>
								<default_text_enable>1</default_text_enable>
							</depends>
						</default_text>
						<time_after_enable translate="label">
							<label>Enable Cut-Off Time</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>21</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</time_after_enable>
						<time_after translate="label">
							<label>Shipping Cut-Off Time</label>
							<frontend_type>time</frontend_type>
							<frontend_model>estimateddelivery/system_config_time</frontend_model>
							<sort_order>22</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Exclude order creation date from calculations if order is placed after specified time</comment>
							<depends>
								<time_after_enable>1</time_after_enable>
							</depends>
						</time_after>
						<holidays translate="label">
							<label>Holidays</label>
							<frontend_type>text</frontend_type>
							<frontend_model>estimateddelivery/system_config_datePeriod</frontend_model>
                            <backend_model>estimateddelivery/backend_datePeriod</backend_model>
							<sort_order>24</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</holidays>
						<weekend translate="label">
                            <label>Weekend Days</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_locale_weekdays</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                            <comment>Selected days of the week will be excluded from the dynamically generated shipping dates</comment>
                        </weekend>
					</fields>
				</shipping>
			</groups>
		</estimateddelivery>
	</sections>
</config>
