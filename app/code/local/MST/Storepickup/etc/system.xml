<?xml version="1.0"?> 
<config>
	<tabs>
        <mst translate="label" module="storepickup">
            <label>Magebay.com</label>
            <sort_order>300</sort_order>
        </mst>
    </tabs>
	<sections>
		<storepickup translate="label" module="storepickup">
			<label>Store Pickup  - Settings</label>
			<tab>mst</tab>
			<frontend_type>text</frontend_type>
			<sort_order>777</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
                <info>
                    <frontend_model>storepickup/system_config_info</frontend_model>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                </info>	
				
				<setting translate="label">
                    <label>Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                   <show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                    <fields>
						
						<enable translate='label'>
                    		<label>Enable Store Pickup: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</enable>						
						<show_info_in_customer_shipping translate='label'>
                    		<label>Show Information Store In Customer shipping Address: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</show_info_in_customer_shipping>
						<pickup_time translate='label'>
                    		<label>Display pickup time/date: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</pickup_time>
						<googleapi translate='label'>
                    		<label>Google Map API key: </label>
                    		<frontend_type>text</frontend_type>
                    		<sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                    	</googleapi>
						
						<header_links translate='label'>
                    		<label>Display in Header Links: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</header_links>
						
						<jquery translate='label'>
                    		<label>Load jQuery </label>
                    		<frontend_type>select</frontend_type>
							<comment>Select No if the jQuery libraries already exist to remove jQuery conflicts. Select Yes to load jquery library from this module.</comment>
                    		<sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <!-- <show_in_website>1</show_in_website> -->
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</jquery>
                    </fields>
                </setting>
				
				<manage_search translate="label">
                    <label>Manage Search</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>51</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <fields>
							
						<search_address translate='label'>
                    		<label>Enable Search By Address: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</search_address>
						<search_country translate='label'>
                    		<label>Enable Search By Country: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</search_country>
						<search_state translate='label'>
                    		<label>Enable Search By State/Province: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</search_state>
						<search_city translate='label'>
                    		<label>Enable Search By City: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</search_city>
						<search_zipcode translate='label'>
                    		<label>Enable Search By Zip/Postal Code: </label>
                    		<frontend_type>select</frontend_type>
                    		<sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                    	</search_zipcode>
					
					</fields>
                </manage_search>
					
				
				
			</groups>
		</storepickup>
	</sections>
       <sections>
        <carriers>
            <groups>
                <storepickup translate="label" module="storepickup">
                    <label>Storepickup Module Shipping Method</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>99</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <name translate="label">
                            <label>Method Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </name>
                        <price translate="label">
                            <label>Price</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </price>
                        <specificerrmsg translate="label">
                            <label>Displayed Error Message</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </specificerrmsg>
                    </fields>
                </storepickup>
            </groups>
        </carriers>
    </sections>
</config>